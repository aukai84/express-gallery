
<div id="sign-in">
    {{#if username}}
    <div id="user-welcome">
        Welcome <span>{{username}}</span>
    </div>
    <form action="/gallery/new" method="GET">
        <input type="submit" name="new" value="New Post">
    </form>
    <form action="/logout" method="GET">
        <input type="submit" name="logout-button" value="Sign Out">
    </form>
    <form action="/user-page" method="GET">
        <input type="submit" name="user-home-button" value="My Gallery">
    </form>
    {{else}}
    <div id="new-welcome">
        <span>Welcome!</span>
        <div id='sign-in-up'>
        <form action="/login" method="GET">
            <input type="submit" name="login-button" value="Sign In">
        </form>
        <form action="/create" method="GET">
            <input type="submit" name="sign-up-button" value="Sign Up">
        </form>
    </div>
    </div>


    {{/if}}
    {{{messages}}}

    <div id="gallery-container">

        {{#each photos}}
        <div class="photo-card">
            <div class="list-top-information">{{author}} - {{description}}</div>
            <a href="/gallery/{{{id}}}">
                <img src="{{link}}" class="image-box">
             </a>
             <div class="list-bottom-information">{{shortLink}} <br>Posted By - {{user.username}}</div>
        </div>
        {{/each}}
    </div>
</div>
