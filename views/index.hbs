
<div id="sign-in">
    {{#if username}}
    <div id="user-welcome">
        Welcome <span>{{username}}</span>
    </div>
    <form action="/gallery/new" method="GET">
        <input type="submit" name="new" value="Create new post">
    </form>
    <form action="/logout" method="GET">
        <input type="submit" name="logout-button" value="Sign Out">
    </form>
    {{else}}
    <div id="new-welcome">
        <span>Welcome! Please sign in!</span>
    </div>
    <form action="/login" method="GET">
        <input type="submit" name="login-button" value="Sign In">
    </form>
    {{/if}}
    {{{messages}}}

    <div id="gallery-container">

        {{#each photos}}
        <div class="photo-card">
            <div class="list-top-information">{{author}} - {{description}}</div>
            <a href="/gallery/{{{id}}}">
                <img src="{{link}}" class="image-box">
             </a>
             <div class="list-bottom-information">{{shortLink}}</div>
        </div>
        {{/each}}
    </div>
</div>
